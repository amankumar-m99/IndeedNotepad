	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu onAction="#fileMenuClicked" mnemonicParsing="false"
					text="File">
					<items>
						<MenuItem fx:id="newMenuItem" mnemonicParsing="false"
							text="New">
							<graphic>
								<ImageView fitHeight="22" preserveRatio="true">
									<image>
										<Image url="@/resources/images/color/menuitems/new.png" />
									</image>
								</ImageView>
							</graphic>
						</MenuItem>
						<MenuItem fx:id="newWindowMenuItem"
							mnemonicParsing="false" text="New Window" >
							<graphic>
								<ImageView fitHeight="22" preserveRatio="true">
									<image>
										<Image url="@/resources/images/color/menuitems/newwindow.png" />
									</image>
								</ImageView>
							</graphic>
							</MenuItem>
						<MenuItem fx:id="openMenuItem" mnemonicParsing="false"
							text="Open" >
							<graphic>
								<ImageView fitHeight="22" preserveRatio="true">
									<image>
										<Image url="@/resources/images/color/menuitems/open.png" />
									</image>
								</ImageView>
							</graphic>
							</MenuItem>
						<MenuItem fx:id="saveMenuItem" mnemonicParsing="false"
							text="Save" >
							<graphic>
								<ImageView fitHeight="22" preserveRatio="true">
									<image>
										<Image url="@/resources/images/color/menuitems/save.png" />
									</image>
								</ImageView>
							</graphic>
							</MenuItem>
						<MenuItem fx:id="saveAsMenuItem" mnemonicParsing="false"
							text="Save As">
							<graphic>
								<ImageView fitHeight="22" preserveRatio="true">
									<image>
										<Image url="@/resources/images/color/menuitems/save.png" />
									</image>
								</ImageView>
							</graphic>
							</MenuItem>
						<MenuItem fx:id="closeMenuItem" mnemonicParsing="false"
							text="Close">
							<graphic>
								<ImageView fitHeight="22" preserveRatio="true">
									<image>
										<Image url="@/resources/images/color/menuitems/close.png" />
									</image>
								</ImageView>
							</graphic>
							</MenuItem>
						<SeparatorMenuItem mnemonicParsing="false" />
						<MenuItem fx:id="printMenuItem" mnemonicParsing="false"
							text="Print">
							<graphic>
								<ImageView fitHeight="22" preserveRatio="true">
									<image>
										<Image url="@/resources/images/color/menuitems/print.png" />
									</image>
								</ImageView>
							</graphic>
							</MenuItem>
						<MenuItem fx:id="exportMenuItem" mnemonicParsing="false"
							text="Export">
							<graphic>
								<ImageView fitHeight="22" preserveRatio="true">
									<image>
										<Image url="@/resources/images/color/menuitems/export.png" />
									</image>
								</ImageView>
							</graphic>
							</MenuItem>
						<SeparatorMenuItem mnemonicParsing="false" />
						<MenuItem fx:id="exitMenuItem" mnemonicParsing="false"
							text="Exit">
							<graphic>
								<ImageView fitHeight="22" preserveRatio="true">
									<image>
										<Image url="@/resources/images/color/menuitems/exit.png" />
									</image>
								</ImageView>
							</graphic>
							</MenuItem>
					</items>
				</Menu>
				<Menu onAction="#editMenuClicked" mnemonicParsing="false" text="Edit">
					<items>
						<MenuItem fx:id="undoMenuItem" mnemonicParsing="false"
							text="Undo">
							<graphic>
								<ImageView fitHeight="22" preserveRatio="true">
									<image>
										<Image url="@/resources/images/color/menuitems/undo.png" />
									</image>
								</ImageView>
							</graphic>
							</MenuItem>
						<MenuItem fx:id="redoMenuItem" mnemonicParsing="false"
							text="Redo">
							<graphic>
								<ImageView fitHeight="22" preserveRatio="true">
									<image>
										<Image url="@/resources/images/color/menuitems/redo.png" />
									</image>
								</ImageView>
							</graphic>
							</MenuItem>
						<SeparatorMenuItem mnemonicParsing="false" />
						<MenuItem fx:id="cutMenuItem" mnemonicParsing="false"
							text="Cut">
							<graphic>
								<ImageView fitHeight="22" preserveRatio="true">
									<image>
										<Image url="@/resources/images/color/menuitems/cut.png" />
