							<graphic>
								<ImageView fitHeight="22" preserveRatio="true">
									<image>
										<Image url="@/resources/images/color/menuitems/paste.png" />
									</image>
								</ImageView>
							</graphic>
							</MenuItem>
						<MenuItem fx:id="deleteMenuItem" mnemonicParsing="false"
							text="Delete">
							<graphic>
								<ImageView fitHeight="22" preserveRatio="true">
									<image>
										<Image url="@/resources/images/color/menuitems/delete.png" />
									</image>
								</ImageView>
							</graphic>
							</MenuItem>
						<SeparatorMenuItem mnemonicParsing="false" />
						<MenuItem fx:id="findMenuItem" mnemonicParsing="false"
							text="Find">
							<graphic>
								<ImageView fitHeight="22" preserveRatio="true">
									<image>
										<Image url="@/resources/images/color/menuitems/find.png" />
									</image>
								</ImageView>
							</graphic></MenuItem>
						<MenuItem fx:id="replaceMenuItem" mnemonicParsing="false"
							text="Replace">
							<graphic>
								<ImageView fitHeight="22" preserveRatio="true">
									<image>
										<Image url="@/resources/images/color/menuitems/replace.png" />
									</image>
								</ImageView>
							</graphic>
							</MenuItem>
						<SeparatorMenuItem mnemonicParsing="false" />
						<MenuItem fx:id="selectAllMenuItem"
							mnemonicParsing="false" text="Select All">
							<graphic>
								<ImageView fitHeight="22" preserveRatio="true">
									<image>
										<Image url="@/resources/images/color/menuitems/selectall.png" />
									</image>
								</ImageView>
							</graphic>
							</MenuItem>
						<MenuItem fx:id="deleteAllMenuItem" mnemonicParsing="false" text="Delete All" />
					</items>
				</Menu>
				<Menu onAction="#formatMenuClicked" mnemonicParsing="false" text="Format">
					<items>
						<CheckMenuItem fx:id="wordWrapMenuItem" mnemonicParsing="false" text="Word wrap" selected="true" />
						<MenuItem fx:id="fontsMenuItem" mnemonicParsing="false" text="Fonts"/>
					</items>
				</Menu>
				<Menu onAction="#viewMenuClicked" mnemonicParsing="false" text="View">
					<items>
						<CheckMenuItem fx:id="lineNumbersMenuItem" mnemonicParsing="false" visible="false"
							text="Show Line numbers" />
						<CheckMenuItem fx:id="statusMenuItem" mnemonicParsing="false" text="Show Status Bar" selected="true" />
					</items>
				</Menu>
				<Menu onAction="#preferenceMenuClicked" mnemonicParsing="false" text="Preference">
					<items>
						<Menu onAction="#preferenceMenuClicked" mnemonicParsing="false" text="Launch">
							<CheckMenuItem fx:id="launchFullScreenMenuItem" mnemonicParsing="false" text="Full Screen" selected="false" />
						</Menu>
						<Menu onAction="#preferenceMenuClicked" mnemonicParsing="false" text="Appearance">
							<MenuItem fx:id="iconPackMenuItem" mnemonicParsing="false" text="Icon Pack">
								<graphic>
									<ImageView fitHeight="22" preserveRatio="true">
										<image>
											<Image url="@/resources/images/color/menuitems/iconpack.png" />
										</image>
									</ImageView>
								</graphic>
							</MenuItem>
							<MenuItem fx:id="themeMenuItem" mnemonicParsing="false" text="Theme">
								<graphic>
									<ImageView fitHeight="22" preserveRatio="true">
										<image>
											<Image url="@/resources/images/theme.png" />
										</image>
									</ImageView>
								</graphic>
							</MenuItem>
						</Menu>
						<MenuItem fx:id="clearAppDataMenuItem" mnemonicParsing="false" text="Clear Preferences">
						<graphic>
								<ImageView fitHeight="22" preserveRatio="true">
									<image>
										<Image url="@/resources/images/color/menuitems/cleardata.png" />
									</image>
								</ImageView>
							</graphic>
						</MenuItem>
					</items>
				</Menu>
				<Menu onAction="#helpMenuClicked" mnemonicParsing="false" text="Help">
					<items>
						<MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="About">
							<graphic>
								<ImageView fitHeight="22" preserveRatio="true">
									<image>
										<Image url="@/resources/images/color/menuitems/about.png" />
									</image>
								</ImageView>
							</graphic>
						</MenuItem>
						<MenuItem fx:id="shortcutMenuItem"
							mnemonicParsing="false" text="Shortcuts" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
</BorderPane>
